pipeline {
    agent any
    tools {
        maven 'Maven'   // <-- this is the name you added in Jenkins
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build') {
            steps {
                sh "mvn clean package"
            }
        }
        stage('Test') {
            steps {
                sh "mvn test"
            }
            post {
                always {
                    junit '**/target/surefire-reports/*.xml'
                    archiveArtifacts artifacts: '**/target/*.jar', fingerprint: true
                }
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying to staging/production...'
            }
        }
    }
    post {
        always {
            echo 'Pipeline execution complete.'
        }
    }
}
